void program(): { }
{
    ( LOOKAHEAD(3)var_decl()
    | LOOKAHEAD(3)func_decl()
    | preprocessor()
    )*
}

void preprocessor(): { }
{
      LOOKAHEAD(3)<HASHTAG> <INCLUDE> "<" <ID>"."<ID> ">"
    | LOOKAHEAD(3)<HASHTAG> <INCLUDE> "\"" <ID>"."<ID> "\""
    | LOOKAHEAD(2)<HASHTAG> <DEFINE> <ID> <ID>
}


void func_decl(): { }
{
    func_type() (<ID> | <MAIN>) <LPAREN> (parameter_list())? <RPAREN> <LBRACE>
    body()
    (return_val())?
    <RBRACE>
}

void func_type(): { }
{
    <INT> | <DOUBLE> | <CHAR> | <FLOAT> | <VOID>
}

void parameter_list(): { }
{
    var_type() <ID> ("," var_type() <ID>)*
}

void body(): { }
{
	(decl() | comando() | desvio())*
}

void decl(): { }
{
	var_decl()
}

void comando(): { }
{
	expr_value() <SEMICOLON>
}

void desvio(): { }
{
    if_cond()
	| while_cond()
	| for_cond()
}

