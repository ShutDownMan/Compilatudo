void program(): { }
{
   main()
}

void main(): { }
{
  < INT > "main" < LPAREN > < RPAREN > < LBRACE >
  corpo()
  < RBRACE >
}

void corpo(): { }
{
	( vardecl() | whilecond() | chamada_func())
	corpo()
}

void chamada_func(): { }
{
	(< IDENT > | < PRINT > | < SCANF >) < LPAREN > /*passada_param()*/ < RPAREN > < SEMICOLON >
}

void tipos(): { }
{
  (< INT > | < DOUBLE > | < CHAR > | < FLOAT > | < IDENT >)
}

void whilecond(): { }
{
	< WHILE > < LPAREN > comp_expressao() < RPAREN > < LBRACE >
	corpo()
	< RBRACE >
}

void comp_expressao(): {}
{
	(<IDENT> | valor() ) comparador() (< IDENT > | valor())
    (("&&" | "||" ) comp_expressao())?
}

void valor(): { }
{
  ( <int_constant > | < float_constant > | < char_constant >)
}

void comparador(): { }
{
	( < GT>  | < LT> | < EQ> | < LE> | < GE > | < NE > )
}

void vardecl(): {}
{
	(tipos()) < IDENT > ( < ASSIGN > ("+"|"-")? (valor()))?
	(< COMMA > <IDENT >  ( < ASSIGN > ("+"|"-")? (valor()))?)*
	< SEMICOLON >
}

